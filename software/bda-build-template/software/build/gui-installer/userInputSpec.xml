<userInput>
	<!-- Install -->
	<panel order="0">
		<field type="title" txt="Test User Input Details" bold="true" size="1" />
		<field type="divider" align="top"/>
		<field type="radio" variable="setup.type">
			<description align="left" txt="Select the type of installation"
			id="installation.radio"/>
			<spec>
				<choice txt="install" id="setup.type.install" value="install" set="true" />
				<choice txt="update" id="setup.type.update" value="update" />
			</spec>
		</field>		
	</panel>
		
	<!-- Install -->
	<panel order="1">
		<field type="title" txt="Application Installation Jboss Port Details" bold="true" size="1" />
		<field type="divider" align="top"/>
		<field type="text" align="left" variable="jboss.server.hostname">
			<spec txt="Enter the host name of the installation" size="15" set="localhost"/>
			<validator
				class="com.izforge.izpack.util.HostNameValidator" txt="Enter a valid Jboss Host name or the Host is not reachable" id="jbosshostname.label">
			</validator>
		</field>	
	
		<field type="text" variable="jboss.server.port">			
			<spec txt="Enter the http port number for the installation:" id="text.label" size="15" set="38080"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The http port number is already in use" id="error.label">
			</validator>
		</field>		
		<field type="text" variable="jboss.server.jndi.port">						
			<spec txt="Enter the jndi port number for the installation:" id="text.label" size="15" set="31099"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The jndi port number is already in use" id="error.label">
			</validator>			
		</field>
		<field type="text" variable="jboss.server.name">						
			<spec txt="Enter the application server name for the installation:" id="text.label" size="15" set="default"/>
		</field>
		<field type="text" variable="jboss.server.rmi.port">						
			<spec txt="Enter the rmi port number for the installation:" id="text.label" size="15" set="31098"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The jndi port number is already in use" id="error.label">
			</validator>			
		</field>

		<field type="text" variable="jboss.ejbinvoker.port">						
			<spec txt="Enter the ejbinvoker port number for the installation:" id="text.label" size="15" set="13873"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The ejbinvoker port number is already in use" id="error.label">
			</validator>			
		</field>
		
		<field type="text" variable="jboss.cobraorb.port">						
			<spec txt="Enter the cobraorb port number for the installation:" id="text.label" size="15" set="33528"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The cobraorb port number is already in use" id="error.label">
			</validator>			
		</field>		
		
		<field type="text" variable="jboss.hajndi.port">						
			<spec txt="Enter the hajndi port number for the installation:" id="text.label" size="15" set="31100"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The hajndi port number is already in use" id="error.label">
			</validator>			
		</field>		
		
