				class="com.izforge.izpack.util.PortValidator" txt="The hajrmi port number is already in use" id="error.label">
			</validator>			
		</field>		
		
		<field type="text" variable="jboss.jms.port">						
			<spec txt="Enter the jms port number for the installation:" id="text.label" size="15" set="38093"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The jms port number is already in use" id="error.label">
			</validator>			
		</field>
		
		<field type="text" variable="jboss.jmx-rmi.port">						
			<spec txt="Enter the jmx-rmi port number for the installation:" id="text.label" size="15" set="39001"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The jmx-rmi port number is already in use" id="error.label">
			</validator>			
		</field>		

		<field type="text" variable="jboss.messaging.port">						
			<spec txt="Enter the messaging port number for the installation:" id="text.label" size="15" set="34457"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The messaging port number is already in use" id="error.label">
			</validator>			
		</field>

		<field type="text" variable="jboss.pooledha.port">						
			<spec txt="Enter the pooledha port number for the installation:" id="text.label" size="15" set="34448"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The pooledha port number is already in use" id="error.label">
			</validator>			
		</field>

		<field type="text" variable="jboss.remoting.port">						
			<spec txt="Enter the remoting port number for the installation:" id="text.label" size="15" set="34446"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The remoting port number is already in use" id="error.label">
			</validator>			
		</field>

	
	</panel>


	<panel order="2">	
		<field type="title" txt="Application Installation Jboss Port Details Cont.." bold="true" size="1" />
		<field type="divider" align="top"/>

		<field type="text" variable="jboss.server.bind.port">						
			<spec txt="Enter the bind port number for the installation:" id="text.label" size="15" set="34445"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The bind port number is already in use" id="error.label">
			</validator>			
		</field>

		<field type="text" variable="jboss.server.redirect.port">						
			<spec txt="Enter the redirect port number for the installation:" id="text.label" size="15" set="38443"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The redirect port number is already in use" id="error.label">
			</validator>			
		</field>		
		
		<field type="text" variable="jboss.service.rmiobject.port">						
			<spec txt="Enter the rmiobject port number for the installation:" id="text.label" size="15" set="34444"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The rmiobject port number is already in use" id="error.label">
			</validator>			
		</field>		
		
		
		<field type="text" variable="jboss.snmp-trapd.port">						
			<spec txt="Enter the snmp-trapd port number for the installation:" id="text.label" size="15" set="31162"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The snmp-trapd port number is already in use" id="error.label">
			</validator>			
		</field>		
		
		<field type="text" variable="jboss.snmp.port">						
			<spec txt="Enter the snmp port number for the installation:" id="text.label" size="15" set="31161"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The snmp port number is already in use" id="error.label">
			</validator>			
		</field>		
		
		<field type="text" variable="jboss.web.service.port">						
			<spec txt="Enter the web service port number for the installation:" id="text.label" size="15" set="38083"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The web service port number is already in use" id="error.label">
			</validator>			
		</field>			
	</panel>

	<panel order="3">

		<field type="title" txt="Application Configuration Details Cont.." bold="true" size="1" />
		<field type="divider" align="top"/>
		<field type="text" variable="grid.index.url">						
			<spec txt="Enter the Index Url:" id="text.label" size="25" set="http://training03.cagrid.org:6080/wsrf/services/DefaultIndexService"/>
			<validator
				class="com.izforge.izpack.util.URLCheckValidator" txt="Please enter a valid Index URL" id="indexurl.label">
			</validator>
		</field>		
		<field type="text" variable="grid.poc.tech.researchCenter.displayname">						
			<spec txt="Enter the Research Center Display Name:" id="text.label" size="25" set="bdarc"/>
		</field>
		<field type="text" variable="grid.poc.tech.researchCenter.shortname">						
			<spec txt="Enter the Research Center Short Name:" id="text.label" size="25" set="bda"/>	
		</field>				
		<field type="text" variable="grid.poc.tech.addr.country">						
			<spec txt="Enter the Country of the Research Center:" id="text.label" size="25" set="USA"/>
		</field>
		<field type="text" variable="grid.poc.tech.addr.locality">						
			<spec txt="Enter the locality or the City of the Research Center:" id="text.label" size="25" set="Rockville"/>
		</field>
		<field type="text" variable="grid.poc.tech.addr.postalCode">						
			<spec txt="Enter the zip code:" id="text.label" size="25" set="22222"/>
		</field>
		<field type="text" variable="grid.poc.tech.addr.stateProvince">						
			<spec txt="Enter the State:" id="text.label" size="25" set="VA"/>
		</field>
		<field type="text" variable="grid.poc.tech.addr.street1">						
			<spec txt="Enter the Street Address line 1:" id="text.label" size="25" set="1234 watson lane"/>
		</field>
		<field type="text" variable="grid.poc.tech.addr.street2">						
			<spec txt="Enter the Street Address line 2:" id="text.label" size="25" set=""/>
		</field>
		<field type="text" variable="grid.poc.tech.affiliation">						
			<spec txt="Enter the Affiliation:" id="text.label" size="25" set="BDA"/>
		</field>						
		<field type="text" variable="grid.poc.tech.name.last">						
			<spec txt="Enter the contact last name:" id="text.label" size="25" set="Last Name"/>
		</field>						
		<field type="text" variable="grid.poc.tech.name.first">						
			<spec txt="Enter the contact first name:" id="text.label" size="25" set="First Name"/>
		</field>
		<field type="text" variable="grid.poc.tech.phone">						
			<spec txt="Enter the Phone Number:" id="text.label" size="25" set="012 456 7890"/>
		</field>
		<field type="text" variable="grid.poc.tech.email">						
			<spec txt="Enter the Email Address:" id="text.label" size="25" set="buildanddeployment@mail.nih.gov"/>
		</field>
	</panel>	
	
	<panel order="4">
		<field type="text" variable="grid.poc.tech.role">						
			<spec txt="Enter the Role :" id="text.label" size="25" set="sysadmin"/>
		</field>
		<field type="text" variable="grid.poc.science.affiliation">						
			<spec txt="Enter the Science Affiliation :" id="text.label" size="25" set="scs"/>
		</field>
		<field type="text" variable="grid.poc.science.name.last">						
			<spec txt="Enter the Science contact last name:" id="text.label" size="25" set="Last Name"/>
		</field>						
		<field type="text" variable="grid.poc.science.name.first">						
			<spec txt="Enter the Science contact first name:" id="text.label" size="25" set="First Name"/>
		</field>
		<field type="text" variable="grid.poc.science.phone">						
			<spec txt="Enter the Science Phone Number:" id="text.label" size="25" set="012 456 7890"/>
		</field>
		<field type="text" variable="grid.poc.science.email">						
			<spec txt="Enter the Science Email Address:" id="text.label" size="25" set="buildanddeployment@mail.nih.gov"/>
		</field>
		<field type="text" variable="grid.poc.science.role">						
			<spec txt="Enter the Science Role :" id="text.label" size="25" set="sysadmin"/>
		</field>
		<field type="text" variable="grid.external.host">						
			<spec txt="Enter the grid external host :" id="text.label" size="25" set=""/>
		</field>

		<field type="text" variable="grid.external.port">						
			<spec txt="Enter the grid external port :" id="text.label" size="25" set=""/>
		</field>

		
	</panel>


	
	<panel order="5">

		<field type="title" txt="Application Configuration Details Cont.." bold="true" size="1" />
		<field type="divider" align="top"/>
		<field type="text" variable="grid.index.url">						
			<spec txt="Enter the Index Url:" id="text.label" size="25" set="http://training03.cagrid.org:6080/wsrf/services/DefaultIndexService"/>
			<validator
				class="com.izforge.izpack.util.URLCheckValidator" txt="Please enter a valid Grid URL" id="indexurl.label">
			</validator>
		</field>
		<field type="text" variable="mail.smtp.server">						
			<spec txt="Enter the mail server:" id="text.label" size="25" set="localhost:80"/>
		</field>						
	</panel>

	<panel order="6">
		<field type="title" txt="LDAP Details" bold="true" size="1" />
		<field type="divider" align="top"/>
		<field type="radio" variable="authentication.type">
			<description align="left" txt="Do you want to configure LDAP?"
			id="ldap.radio"/>
			<spec>
				<choice txt="true" id="ldap.install" value="ldap" set="true" />
				<choice txt="false" id="ldap.install" value="db" />
			</spec>
		</field>		
	</panel>	

	<panel order="7">
			<field type="title" txt="LDAP Configuration" bold="true" size="1" />
			<field type="divider" align="top"/>
			<field type="text" variable="ldap.url">						
				<spec txt="Enter the ldap host name:" id="text.label" size="25" set="localhost"/>
			</field>
			<field type="text" variable="ldap.basedn">						
				<spec txt="Enter the ldap search base:" id="text.label" size="25" set="25"/>
			</field>						
	</panel>

	


	<!-- Install -->
	<panel order="8">
		<field type="title" txt="Application Update Configuration Details" bold="true" size="1" />
		<field type="divider" align="top"/>
		
		<field type="dir" align="left" variable="existing.installation.home">
			<spec txt="Select the location of the ctods application" size="15" set="$INSTALL_PATH"/>
		</field>
		<field type="text" align="left" variable="jboss.server.hostname">
			<spec txt="Enter the host name of the installation" size="15" set="localhost"/>
			<validator
				class="com.izforge.izpack.util.HostNameValidator" txt="Enter a valid Jboss Host name or the Host is not reachable" id="jbosshostname.label">
			</validator>
		</field>		
		<field type="text" variable="jboss.server.port">			
			<spec txt="Enter the http port number for the installation:" id="text.label" size="15" set="38080"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The http port number is already in use" id="error.label">
			</validator>
		</field>		
		<field type="text" variable="jboss.server.jndi.port">						
			<spec txt="Enter the jndi port number for the installation:" id="text.label" size="15" set="31099"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The jndi port number is already in use" id="error.label">
			</validator>			
		</field>
		<field type="text" align="left" variable="jboss.server.name">
			<spec txt="Enter the application server name for the installation" size="15" set="default"/>
		</field>
		
		
		<field type="text" align="left" variable="grid.server.hostname">
			<spec txt="Enter the grid server host name of the installation" size="15" set="localhost"/>
			<validator
				class="com.izforge.izpack.util.HostNameValidator" txt="Enter a valid Grid Host name or the Host is not reachable" id="gridhostname.label">
			</validator>
		</field>		
		<field type="text" variable="grid.server.port">			
			<spec txt="Enter the grid server http port number for the installation:" id="text.label" size="15" set="18080"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The grid http port number is already in use" id="error.label">
			</validator>
		</field>		
		<field type="text" variable="grid.server.jndi.port">						
			<spec txt="Enter the grid server jndi port number for the installation:" id="text.label" size="15" set="11099"/>
			<validator
				class="com.izforge.izpack.util.PortValidator" txt="The grid jndi port number is already in use" id="error.label">
			</validator>			
		</field>
		<field type="text" align="left" variable="grid.server.name">
			<spec txt="Enter the application server name for the installation" size="15" set="default"/>
		</field>		
		
		
		<field type="text" variable="grid.index.url">						
			<spec txt="Enter the Index Url:" id="text.label" size="25" set="http://training03.cagrid.org:6080/wsrf/services/DefaultIndexService"/>
			<validator
				class="com.izforge.izpack.util.URLCheckValidator" txt="Please enter a valid Grid URL" id="indexurl.label">
			</validator>
		</field>	
	</panel>
	
	<!-- Install -->
	<panel order="9">
	
		<field type="title" txt="Application Database Details " bold="true" size="1" />
		<field type="divider" align="top"/>
	
		<variable name="install.path" value="$INSTALL_PATH"/>
		<variable name="baseDir" value="$INSTALL_PATH"/>
	
		<field type="text" variable="database.server">
			<spec txt="Enter the Database Server:"
				id="dbhostname.label" size="25" set="localhost"/>
			<validator
				class="com.izforge.izpack.util.HostNameValidator" txt="Enter a valid Host name or the Host is not reachable" id="dbhostname.label">
			</validator>				
		</field>
		<field type="text" variable="database.port">
			<spec txt="Enter the Database Port:"
				id="dbport.label" size="25" set="3306"/>
		
		</field>		
		<field type="text" variable="database.name">
			<spec txt="Enter the Database Name:"
				id="text.label" size="25" set="ctodsdb"/>
		</field>		
		<field type="text" variable="database.system.user">
			<spec txt="Enter the Database User Name with administative privileges:" id="text.label"
				size="25" set="root"/>
		</field>		
		<field type="password" allign="left" variable="database.system.password">
			<spec>
				 <pwd txt="Enter the password for the above-named user:" id="pwd.label" size="25" set=""/>				 
			</spec>
			<validator
				class="com.izforge.izpack.util.DBConnectionValidator" txt="The root password did not match" id="error.label">
				<param name="systemUser" value="true" />
			</validator>
		</field>
		<field type="text" variable="database.user">
			<spec txt="Enter the Database User Name for the ctods application:" id="text.label"
				size="25" set="ctodsop"/>
		</field>		
		<field type="password" allign="left" variable="database.password">
			<spec>
				 <pwd txt="Enter the password for the above-named user:" id="pwd.label" size="25" set=""/>				 
			</spec>
			<validator
				class="com.izforge.izpack.util.DBConnectionValidator" txt="The database user and password did not match" id="error.label">
			</validator>
		</field>

		
	</panel>

</userInput>
