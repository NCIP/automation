			grid.poc.science.email=fa/il
			evaluate.property.name=grid.poc.science.email
			groovy.debug=true
		</echo>
		<replaceregexp file="${dist.exploded.dir}/local.properties" byline="true"
			match="^\s+(.*)\s*$"
			replace="\1"
			/>
