			database.server=localhost
			evaluate.property.name=database.server
			groovy.debug=true
		</echo>
		<replaceregexp file="${dist.exploded.dir}/local.properties" byline="true"
			match="^\s+(.*)\s*$"
			replace="\1"
			/>
