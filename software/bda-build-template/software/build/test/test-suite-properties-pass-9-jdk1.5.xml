			jboss.web.service.port=30250
			evaluate.property.name=jboss.web.service.port
			groovy.debug=true
		</echo>
		<replaceregexp file="${dist.exploded.dir}/local.properties" byline="true"
			match="^\s+(.*)\s*$"
