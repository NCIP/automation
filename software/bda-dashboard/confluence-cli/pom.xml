<?xml version="1.0" encoding="UTF-8"?> 

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  	<modelVersion>4.0.0</modelVersion>
  	<groupId>org.swift.confluence.cli</groupId>
  	<artifactId>confluence-cli</artifactId>
  	<version>1.3.0</version>
 
  	<name>Confluence command line interface (CLI)</name>
  	<packaging>jar</packaging>

  	<description>
  		A command line interface (CLI) for Atlassian Confluence.
  	</description>
   	<url>http://confluence.atlassian.com/display/CONFEXT/Confluence Command Line Interface</url>

    <organization>
        <name>Bob Swift</name>
        <url>http://confluence.atlassian.com/display/~bob.swift</url>
    </organization>
    
    <developers>
        <developer>
            <name>Bob Swift</name>
            <email>bob.swift@charter.net</email>
            <organization/>
            <organizationUrl/>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>6</timezone>
        </developer>
    </developers>
     
  	<properties>
        <release.directory>${project.build.directory}/release</release.directory>
        <outputDirectory>${release.directory}</outputDirectory>
        <mainClass>${packageName}.ConfluenceClient</mainClass>
        <packageName>org.swift.confluence.cli</packageName>
  	</properties>
    
    <issueManagement>
        <system>Atlassian Developer JIRA</system>
        <url>http://developer.atlassian.com/jira/browse/CSOAP</url>
    </issueManagement>

    <scm>
        <connection>
        	scm:svn:http://svn.atlassian.com/svn/public/contrib/confluence/confluence-cli/trunk
        </connection>
        <developerConnection>
            scm:svn:https://svn.atlassian.com/svn/public/contrib/confluence/confluence-cli/trunk
        </developerConnection>
        <url>http://svn.atlassian.com/fisheye/browse/public/contrib/confluence/confluence-cli/trunk</url>
    </scm>

    <licenses>
        <license>
            <name>BSD</name>
            <distribution>http://www.opensource.org/licenses/bsd-license.php</distribution>
            <comments>
				 Copyright (c) 2006, 2008, Bob Swift.  All rights reserved.
            </comments>
            <url>/LICENSE.txt</url>
        </license>
    </licenses>

  	<dependencies>

	    <!-- CLI soap base -->
	    <dependency>
	        <groupId>org.swift.common</groupId>
	    	<artifactId>cli-soap</artifactId>
	        <version>1.0.0</version>
	    </dependency>

    	<!-- SOAP library -->
	  	<dependency>
	    	<groupId>com.dolby.atlassian.confluence</groupId>
	    	<artifactId>confluence-soap-model</artifactId>
	    	<version>0.2</version>
		</dependency>

		<!-- JUnit is used to perform unit tests -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>

	    <dependency>
	        <groupId>commons-lang</groupId>
	        <artifactId>commons-lang</artifactId>
	        <version>2.4</version>
	    </dependency>

	    <!-- AXIS dependencies -->
        <!-- log4j -->
	    <dependency>
	        <groupId>commons-logging</groupId>
	        <artifactId>commons-logging</artifactId>
	        <version>1.1</version>
	    </dependency>

        <!-- Remote exception -->
	    <dependency>
	        <groupId>axis</groupId>
	        <artifactId>axis</artifactId>
	        <version>1.4</version>
	    </dependency>

        <!-- javax.xml.rpc -->
	    <dependency>
	        <groupId>axis</groupId>
	        <artifactId>axis-jaxrpc</artifactId>
	        <version>1.4</version>
	    </dependency>

        <!-- javax.activation. -->
	    <dependency>
	        <groupId>javax.activation</groupId>
	        <artifactId>activation</artifactId>
	        <version>1.1</version>
	    </dependency>

		<dependency>
	        <groupId>javax.mail</groupId>
	        <artifactId>mail</artifactId>
	        <version>1.4</version>
	    </dependency>

  	</dependencies>

  	<build>
    	<resources>
	  		<resource>
	    		<directory>src/main/resources</directory>
	        	<filtering>true</filtering>
	        	<includes>
	        		<include>*.bat</include>
	        		<include>*.txt</include>
	        	</includes>
	    	</resource>
	    	<resource>
	    		<targetPath>examples</targetPath>
	    		<directory>src/main/resources/examples</directory>
	        	<filtering>false</filtering>
	        	<includes>
	        		<include>*.*</include>
	        	</includes>
	    	</resource>
	  		<resource>
	    		<directory>src/assembly</directory>
	        	<filtering>true</filtering>
	        	<includes>
	        		<include>release.xml</include>
	        	</includes>
	    	</resource>
	    	<resource>
	    		<directory>.</directory>
	        	<filtering>true</filtering>
	        	<includes>
	        		<include>README.txt</include>
	        	</includes>
	    	</resource>
	    	<!--
	    	<resource>
	        	<targetPath>META-INF</targetPath>
	        	<directory>license</directory>
	        	<includes>
	          		<include>NOTICES.txt</include>
	          		<include>LICENSE*.txt</include>
	        	</includes>
	      	</resource>
	      	-->
	  	</resources>

		<plugins>
		    <!--  ensure we build what we're targetting -->
	        <plugin>
	                <artifactId>maven-compiler-plugin</artifactId>
	                <configuration>
	                    <source>1.5</source>
	                    <target>1.5</target>
	                </configuration>
	        </plugin>

			<!--  Customize location of built resources -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<outputDirectory>${project.build.directory}</outputDirectory>
				</configuration>
			</plugin>

		    <!--  Generating a executable jar -->
	    	<plugin>
	        	<groupId>org.apache.maven.plugins</groupId>
	         	<artifactId>maven-jar-plugin</artifactId>
	         	<configuration>
	         		<archive>
	            		<manifest>
	              			<mainClass>${mainClass}</mainClass>
	              			<addClasspath>true</addClasspath>
	            		</manifest>
	          		</archive>
	          		<outputDirectory>${release.directory}</outputDirectory>
	        	</configuration>
	     	</plugin>

	     	<!--  Copy all the dependency jars into the release directory -->
	     	<plugin>
	        	<groupId>org.apache.maven.plugins</groupId>
	        	<artifactId>maven-dependency-plugin</artifactId>
	        	<executions>
	          		<execution>
	            		<id>copy-dependencies</id>
	            		<phase>package</phase>
	            		<goals>
	              			<goal>copy-dependencies</goal>
	            		</goals>
	            		<configuration>
	              			<outputDirectory>${release.directory}</outputDirectory>
	              			<overWriteReleases>false</overWriteReleases>
	              			<overWriteSnapshots>false</overWriteSnapshots>
	              			<overWriteIfNewer>true</overWriteIfNewer>
	            		</configuration>
	          		</execution>
	        	</executions>
	      	</plugin>

	      	<!--  ZIP for release, to run use mvn assembly:assembly -->
	      	<plugin>
	      	    <groupId>org.apache.maven.plugins</groupId>
	       		<artifactId>maven-assembly-plugin</artifactId>
	        	<configuration>
	        		<descriptors>
	            		<descriptor>${project.build.directory}/release.xml</descriptor>
	          		</descriptors>
	        	</configuration>
	      	</plugin>
	    </plugins>
  	</build>

</project>