<installer-configuration>
	<installer-options>
		<logo file=""/>
		<title text=""/>
		<introduction text=""/>
		<requirements>
			<requirement name="ant" version="1.7.1">
				<downlads>
					<download name="ant" os="any" url=""/>
					<download name="other" url=""/>
				</downloads>
			</requirement>
		</requirements>
		<data-types>
			<data-type name="database.type.list" type="list">
				<list-item name="MySQL" value="mysql"/>
				<list-item name="Oracle" value="oracle"/>
				<list-item name="PostgreSQL" value="postgresql"/>
				<default value="mysql"/>
			</data-type>
			<data-type name="application.url" type="url" test-class="gov.nih.nci.installer.type.url.check"/>
		</data-types>

	</installer-options>
	<application-group name="default">
		<applications>
			<application name="sample">
				<description>sample application</description>
				<versions>
					<version name="3.0">
						<app-install-config-file name="sample-web-config" url=""/>
						<app-install-config-file name="sample-web-config1" location=""/>
						<app-install-config>
							<install-type name="install">
								<download-files download-relative-path="./sample/">
									<file name="sample-x.x.zip" os="any" url=""/>
								</download-files>
								<property-groups>
									<property-group name="propgroup1">
										<property name="group-name.application-name.standard-property" description="standard property" value-type="database.type.list" input-type="check-box" visibility="standard"/>
										<property name="group-name.application-name.advanced-property" description="advanced property" value-type="number" input-type="text" visibility="advanced"/>
									</property-group>
								</property-groups>
								<property-file name="name" location="/path/file">
									<property-group name="name"/>
									<property name="name"/>
								</property-file>
								<build-files>
									<build-file name="name" location="/path/file">
										<build-targets>
											<build-target name="" value="">
												<condition type="equals" property="name" value="value"/>
												<condition type="is.set" property="name" />
											</build-target>
										</build-targets>
									</build-file>
								</build-files>
							</install-type>
							<install-type name="upgrade">
							</install-type>
						</app-install-config>
					</version>
				</versions>
			</application>
		</applications>
	</application-group>
</installer-configuration>
