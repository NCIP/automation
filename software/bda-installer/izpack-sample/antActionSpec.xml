<antactions> 
	<pack name="download_install">
		<antcall buildfile="$INSTALL_PATH/build.xml"
			order="afterpack"
			verbose="yes"
			logfile="$INSTALL_PATH/antlog_installer.txt"
			inheritall="false"
			messageid="AntAction.download-install"			
			>
			<target name="install"/>
			<property name="install.path" value="$INSTALL_PATH"/>   
		</antcall>
	</pack>

	<pack name="download_update">
		<antcall buildfile="$INSTALL_PATH/build.xml"
			order="afterpack"
			verbose="yes"
			logfile="$INSTALL_PATH/antlog_installer.txt"
			inheritall="false"
			messageid="AntAction.download-update"			
			>
			<target name="update"/>
			<property name="install.path" value="$INSTALL_PATH"/>   
		</antcall>
	</pack>
	
	<pack name="convert-install-path">
		<antcall buildfile="$INSTALL_PATH/build.xml"
			order="afterpack"
			verbose="yes"
			logfile="$INSTALL_PATH/antlog_installer.txt"
			inheritall="false"
			messageid="AntAction.convert-install-path"			
			>
			<target name="convert-install-path"/>
			<property name="install.base.path" value="$UserPathPanelVariable"/>
			<property name="install.path" value="$INSTALL_PATH"/>
		</antcall>
	</pack>

	<pack name="convert-update-path">
		<antcall buildfile="$INSTALL_PATH/build.xml"
			order="afterpack"
			verbose="yes"
			logfile="$INSTALL_PATH/antlog_installer.txt"
			inheritall="false"
			messageid="AntAction.convert-update-path"			
			>
			<target name="convert-upgrade-path"/>
			<property name="upgrade.base.path" value="${existing.installation.home}"/>
			<property name="install.path" value="$INSTALL_PATH"/>
		</antcall>		
	</pack>
	
	<pack name="install-application">
		<antcall buildfile="$INSTALL_PATH/build.xml"
			order="afterpacks"
			verbose="yes"
			logfile="$INSTALL_PATH/antlog_installer.txt"
			inheritall="false"
			messageid="AntAction.install-application"		
			>
			<target name="install-application"/>
			<property name="install.path" value="$INSTALL_PATH"/>   
		</antcall>
	</pack>	
	
		
</antactions>   