<?xml version="1.0" encoding="utf-8" ?>

<project name="patch-apply" default="apply:ivy-nexus-patch" basedir="." >
	<description>
	 This ant build file applies the subversion style patch file to a project's root directory
    </description>

    <property name="patch.file" value="ivy_nexus_patch.diff"/>
    <property name="patch.dir" location="."/>


    <target name="apply:ivy-nexus-patch" description="This is the default target">
        <echo message="Applying Ivy-Nexus Patch file to Project...." />
         <exec executable="patch" osfamily="unix" dir="${patch.dir}" spawn="false" >
				<arg line="-p0"/>
				<arg line="-i ${patch.dir}/${patch.file}"/>
				
         </exec>
        <echo message="Patch Application Complete." />
    </target>

 </project>