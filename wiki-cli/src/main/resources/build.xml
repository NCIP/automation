<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="wikimod" basedir="." default="run" xmlns:antunit="antlib:org.apache.ant.antunit" xmlns="antlib:org.apache.tools.ant">

	<target name="run" description="Run the class to update Wiki">
		<java classname="gov.nih.nci.confluence.BuildStatusUpdater">	
			<classpath>
				<pathelement location="./wiki_cli_nci.jar"/>
                <fileset dir="./lib">
                    <include name="*.jar" />
                </fileset>
			</classpath>
		</java>		
	</target>

	<target name="run-validate" description="Run the class to update Wiki">
		<java classname="gov.nih.nci.confluence.ErrorValidator">	
			<classpath>
				<pathelement location="./wiki_cli_nci.jar"/>
                <fileset dir="./lib">
                    <include name="*.jar" />
                </fileset>
			</classpath>
		</java>		
	</target>	
</project>
